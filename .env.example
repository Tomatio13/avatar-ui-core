# ===========================================
# 必須設定（これらがないと起動しません）
# ===========================================

# Google AI Studio APIキー
# 取得先: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# 使用するGeminiモデル
MODEL_NAME=gemini-2.0-flash

# ===========================================
# 任意設定（デフォルト値あり）
# ===========================================

# ===== サーバー設定 =====
# サーバーポート番号
SERVER_PORT=5000

# デバッグモード（開発時: True, 本番: False）
DEBUG_MODE=False

# ===== アバター設定 =====
# AIアシスタントの名前
AVATAR_NAME=Spectra

# AIアシスタントのフルネーム
AVATAR_FULL_NAME=Spectra Communicator

# アバター画像ファイル名（static/images/内のファイル）
AVATAR_IMAGE_IDLE=idle.png
AVATAR_IMAGE_TALK=talk.png

# ===== AIシステムプロンプト設定 =====
# AIの人格や応答スタイル
SYSTEM_INSTRUCTION=あなたはSpectraというAIアシスタントです。技術的で直接的なスタイルで簡潔に応答してください。回答は短く要点を押さえたものにしてください。

# ===== UI設定 =====
# タイプライター効果の文字表示速度（ミリ秒）
# 小さいほど高速
TYPEWRITER_DELAY_MS=50

# 口パクアニメーションの切替間隔（ミリ秒）
MOUTH_ANIMATION_INTERVAL_MS=150

# ===== サウンド設定 =====
# タイピング音の周波数（Hz）
BEEP_FREQUENCY_HZ=800

# タイピング音の長さ（ミリ秒）
BEEP_DURATION_MS=50

# タイピング音の音量（0.0-1.0）
BEEP_VOLUME=0.05

# タイピング音終了時の音量（フェードアウト用）
BEEP_VOLUME_END=0.01

# ===== MCP設定 =====
# MCP機能の有効/無効
MCP_ENABLED=True

# MCPサーバー設定（JSON形式）
# 複数のMCPサーバーを設定可能
MCP_SERVERS_JSON='{
  "weather": {
    "command": "sh",
    "args": [
      "/home/masato/Docker/mcp/mcp-weather-service-server/start.sh"
    ]
  },
  "unsplash": {
    "command": "/home/masato/Docker/mcp/unsplash-mcp-server/start.sh",
    "args": []
  },
  "tavily": {
    "command": "sh",
    "args": [
      "/home/masato/Docker/mcp/mcp-server-tavily/start.sh"
    ]
  }
}'

# ===== LLM設定 =====
# 使用するLLMプロバイダー（google-genai, openai, anthropic）
LLM_PROVIDER=google-genai

# OpenAI APIキー（OpenAI使用時のみ必要）
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic APIキー（Anthropic使用時のみ必要）
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI使用時のモデル名
# OPENAI_MODEL=gpt-4o

# Anthropic使用時のモデル名
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# MCPエージェントの最大ステップ数
MCP_AGENT_MAX_STEPS=30